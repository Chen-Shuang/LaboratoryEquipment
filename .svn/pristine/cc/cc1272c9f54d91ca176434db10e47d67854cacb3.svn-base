	public void doplan(){
		Date date=new Date();//获取时间
		SimpleDateFormat df=new SimpleDateFormat("yyyy-MM-dd ");//转换格式
		String dt=df.format(date);
		List<Zzprscjh> zzp=Zzprscjh.dao.find("select * from scjhgl_zzprscjh where rscjhbh='"+dt+"'&& jhdzt='未下达' ");
		for (int i = 0; i < zzp.size(); i++) {
			Long x=zzp.get(i).getLong("zjbm");
			int n1=zzp.get(i).getInt("pcsl"); 
			
			List<Zzpscdd> zd=Zzpscdd.dao.find("select * from scjhgl_zzpscdd where zjbm="+x);   //从存货编码判断
			for (int j = 0; j < zd.size(); j++) {
				int n2=zd.get(j).getInt("ypcs");
				int num =n1+n2;
				zd.get(j).set("ypcs", num).update();
				
				int n3=zd.get(j).getInt("scsl");
				int m=zd.get(j).getInt("ypcs");
				System.out.println(m);
				int n4=n3-m;
				zd.get(j).set("dpcs", n4).update();
			}
			zzp.get(i).set("jhdzt", "已下达").update();
		}
	redirect("#zzprscjh");
}	
	
	
	
	
