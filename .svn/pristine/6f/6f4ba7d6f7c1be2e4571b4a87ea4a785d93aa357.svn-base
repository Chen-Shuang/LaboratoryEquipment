<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<div class="breadcrumbs" id="breadcrumbs">
	<ul class="breadcrumb">
		<li><i class="ace-icon fa fa-home home-icon"></i> <a href="index">主页</a>
		</li>

		<li><span>控制台</span></li>
	</ul>
</div>

<div class="page-content">
	<div class="row">
		<div class="col-xs-12">
			<form class="form-horizontal" role="form"
				action="/mes/dept/update" method="post">
				 
				<div class="tab
					<div class="row">
						<div class="col-xs-12">
								<div class="form-group">
									<label class="col-sm-3 control-label no-padding-right"
										for="form-field-1"> 部门编号 </label>

									<div class="col-sm-9">
										<input type="text" id="form-field-1" 
											class="col-xs-10 col-sm-5" name="dept_id" value="${dept.dept_id}" />*不可修改
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label no-padding-right"
										for="form-field-1-1"> 部门名称 </label>

									<div class="col-sm-9">
										<input type="text" id="form-field-1" 
											class="col-xs-10 col-sm-5"name="dept_name" value="${dept.dept_name}" />
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label no-padding-right"
										for="form-field-2">状态</label>

									<div class="col-sm-3">
										<div class="clearfix">
											<select name="status" aria-controls="dynamic-table"
											class="form-control">
											<option value="1">启用</option>
											<option value="0">停用</option>
										</select>
										</div>

										<div class="space-2"></div>

										<div class="help-block" id="input-span-slider"></div>
									</div>
								</div>

 

				<div class="clearfix form-actions">
					<div class="col-md-offset-3 col-md-9">
						<button class="btn btn-info"   type="submit" >
							<i class="ace-icon fa fa-check bigger-110"></i> 更新
						</button>

						&nbsp; &nbsp; &nbsp;
						<button class="btn" type="reset">
							<i class="ace-icon fa fa-undo bigger-110"></i> 重置
						</button>
					</div>
				</div>

			</form>
		</div>

	</div>
</div>

