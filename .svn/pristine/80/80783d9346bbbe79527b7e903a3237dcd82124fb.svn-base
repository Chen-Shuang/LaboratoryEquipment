<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<style type="text/css">
</style>
<div class="breadcrumbs" id="breadcrumbs">
	<ul class="breadcrumb">
		<li><i class="ace-icon fa fa-home home-icon"></i> <a href="index">主页</a>
		</li>
		<li><span>控制台</span></li>
	</ul>
</div>
<div class="page-content">
	<div class="table-header">部门管理</div>
	<div class="row">
		<div class="col-xs-12">
			<div id="dynamic-table_wrapper"
				class="dataTables_wrapper form-inline no-footer">
				
				<div class="zTreeDemoBackground col-xs-3">
					<a class="_p btn btn-sm btn-info" href="dept">查看全部的用户</a>
					<ul id="treeDemo" class="ztree"></ul>
				</div>
				<div class="col-xs-9">

					<table
						class="table table-striped table-bordered table-hover dataTable no-footer DTTT_selectable"
						id="dynamic-table" role="grid"
						aria-describedby="dynamic-table_info">
						<thead>
							<tr>
								<th class="col-xs-1">用户名</th>
								<th class="hidden-480 col-xs-2">职位</th>
								<th class="col-xs-2">角色</th>
								<th class="col-xs-2">状态</th>
							</tr>
						</thead>

						<tbody id="deptpage">
						</tbody>

					</table>
					<div class="row">
						<div class="col-xs-12 col-md-7"></div>
						<div class="col-xs-12 col-md-5">
							<div class=" pull-left">
								<label>显示<select name="dynamic-table_length"
									aria-controls="dynamic-table" class="form-control input-sm"><option
											value="10">10</option>
										<option value="25">25</option>
										<option value="50">50</option>
										<option value="100">100</option>
								</select> 条记录
								</label>
							</div>

							<div class="dataTables_paginate paging_simple_numbers "
								id="dynamic-table_paginate">
								<ul id="package" class="pagination">
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="hidden" id="addqx">
	<div class="col-xs-1"></div>
	<div class="col-xs-10">
		<form id="adx" action="dept/upprivi" method="post">
			<div class="col-xs-12">
				<div class="control-group">
					<label class="control-label bolder blue">权限更改</label> <input
						type="hidden" name="dept_id" id="dept_id"><input
						type="hidden" name="dept_name" id="dept_name"> <#list
					privilege as p>
					<div class="checkbox">
						<label> <input name="privilege_id" type="checkbox"
							class="ace ace-checkbox-3" value="${p.privilege_id!}"> <span
							class="lbl">${p.privilege_name!}</span>
						</label>
					</div>
					</#list>
				</div>
			</div>

		</form>
	</div>
	<div class="col-xs-1"></div>
</div>
<div class="hide" id="add">

	<form id="pform" action="dept/add" method="post">


		<div class="col-xs-12">
			<div class="control-group">
				<label class="control-label bolder blue">权限选择</label> <input
					type="hidden" name="dept.dept_id" id="dept_id"> <input
					type="hidden" name="dept.prent_id" id="p_id"> <#list
				privilege as p>
				<div class="checkbox">
					<label> <input name="privilege_id" type="checkbox"
						class="ace ace-checkbox-3" value="${p.privilege_id!}"> <span
						class="lbl">${p.privilege_name!}</span>
					</label>
				</div>
				</#list>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right"
				for="form-field-1">请输入部门名称</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="dept.dept_name"
					id="str1" value="" />
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right"
				for="form-field-1">请选择部门状态</label>

			<div class="col-sm-9">
				<select name="dept.status" aria-controls="dynamic-table"
					class="form-control input-sm"><option value="1">启用</option>
					<option value="0">禁用</option>
				</select>
			</div>
		</div>
	</form>
</div>
<script type="text/javascript">
	pagedemo(1);
	function pagedemo(n) {
		$.get("dept/pagedemo", {
			"pageNumber" : n
		}, function(data) {
			pack(data.list);
			packpage(data);
		});
	}

	function pack(data) { //填充数据
		var dataStr = "";
		$.each(data, function(i, v) {
			dataStr += packlist(v);
		});
		$("#deptpage").html(dataStr);
	}

	function packlist(v) {
		var dataStr = "";
		dataStr += '<tr>';
		dataStr += '<td>' + v.name + '</td>';
		dataStr += '<td>' + v.position + '</td>';
		dataStr += '<td>' + v.role_id + '</td>';
		dataStr += '<td>';
		if (v.status == true) {
			dataStr += '<span class="label label-sm label-success">';
			dataStr += '启用';
			dataStr += '</span>';
		} else {
			dataStr += '<span class="label label-sm label-inverse arrowed-in">停用</span>';
		}
		dataStr += '</td>';
		dataStr += '</tr>';
		return dataStr;
	};
	function packpage(data) {

		var n = "";
		if (data.pageNumber == 1) { //上一页
			var m = 1;
		} else {
			var m = data.pageNumber - 1;
		}
		;
		if (data.pageNumber >= data.totalPage) {
			var p = data.totalPage;
		} else {
			var p = data.pageNumber + 1;
		}
		;
		n += "<li onclick=\"packpagesc(" + m + ")\"><a>" + "上一页"
				+ "</a>&nbsp;&nbsp;";
		for (var a = 1; a <= data.totalPage; a++) {
			if (a == data.pageNumber) {
				n += "<li class=\"active\" onclick=\"packpagesc(" + a
						+ ")\"><a>" + a + "</a>&nbsp;&nbsp;";
			} else {

				n += "<li onclick=\"packpagesc(" + a + ")\"><a>" + a
						+ "</a></li>&nbsp;&nbsp;";
			}
			;
		}
		n += "<li onclick=\"packpagesc(" + p + ")\"><a>" + "下一页"
				+ "</a>&nbsp;&nbsp;";
		$("#package").html(n);
	};
	function packpagesc(curr) {

		$.get("dept/pagedemo", {
			"pageNumber" : curr
		}, function(data) {
			pack(data.list);
			packpage(data);
		});
	};

	function addFrom() {
		document.getElementById("pform").reset();
		$('#add').removeClass("hide");
		userModel = layer.open({
			type : 1,
			shade : [ 0.5 ],
			title : '添加部门',
			area : [ '30%', '300px' ],
			content : $('#add'), //捕获的元素
			btn : [ '提交', '取消' ],
			yes : function(index, layero) { //或者使用btn1
				$.post("add", $("#pform").serialize(), function(data) {

					layer.close(index);
					$('#add').addClass("hide");
					document.getElementById("pform").submit();
				});

			},
			cancel : function(index) {
				layer.close(index);
				$('#add').addClass("hide"); //取消继续隐藏
			},
		});
	};

	var setting = {
		async : {
			enable : true,

		},
		view : {
			expandSpeed : "",
			addHoverDom : addHoverDom,
			removeHoverDom : removeHoverDom,
			selectedMulti : false,
			showIcon : true
		/* 不现实结点图片 */
		},
		edit : {
			enable : true,
			showRemoveBtn : showRemoveBtn,
			removeTitle : "删除部门",
			renameTitle : "部门修改",
			editNameSelectAll : false
		},
		data : {
			simpleData : {
				enable : true
			}
		},
		callback : {
			beforeRemove : beforeRemove,
			beforeRename : beforeRename
		}
	};
	var zNodes = ${strList};

	function beforeRemove(treeId, treeNode) {
		$("#dept_id").val(treeNode.id);
		window.location.href = "/mes/#dept/del?id=" + treeNode.id;
		return confirm("确认删除 节点 -- " + treeNode.name + " 吗？");

	}

	function beforeRename(treeId, treeNode, newName) {
		$("#dept_name").val(newName);
		$("#dept_id").val(treeNode.id);
		document.getElementById("adx").reset();
		$('#addqx').removeClass("hidden");
		userMode = layer.open({
			type : 1,
			shade : [ 0.5 ],
			title : '权限更改', //不显示标题
			area : [ '20%', '500px' ], //显示空间
			content : $('#addqx'), //捕获的元素
			btn : [ '添加', '取消' ],
			yes : function(index, layero) { //或者使用btn1
				$.post("addqx", $("#adx").serialize(), function(data) {
					layer.close(index);
					$('#addqx').addClass("hidden");
					document.getElementById("adx").submit();
				});
			},
			cancel : function(index) {
				layer.close(index);
				$('#addqx').addClass("hidden"); //取消继续隐藏
			},
		});

		/* if (newName.length == 0) {
			alert("节点名称不能为空.");
			return false;
		}
		return true; */
	}

	var newCount = 1;
	function addHoverDom(treeId, treeNode) {

		var sObj = $("#" + treeNode.tId + "_span");
		if (treeNode.editNameFlag || $("#addBtn_" + treeNode.tId).length > 0)
			return;
		var addStr = "<span class='button add' id='addBtn_" + treeNode.tId
				+ "' title='add node' onfocus='this.blur();'></span>";
		sObj.after(addStr);
		var btn = $("#addBtn_" + treeNode.tId);
		if (btn)
			btn.bind("click", function() {
				var zTree = $.fn.zTree.getZTreeObj("treeDemo");
				$("#p_id").val(treeNode.id);
				document.getElementById("pform").reset();
				$('#add').removeClass("hide");
				userModel = layer.open({
					type : 1,
					shade : [ 0.5 ],
					title : '添加部门',
					area : [ '30%', '300px' ],
					content : $('#add'), //捕获的元素
					btn : [ '提交', '取消' ],
					yes : function(index, layero) { //或者使用btn1
						$.post("add", $("#pform").serialize(), function(data) {

							layer.close(index);
							$('#add').addClass("hide");
							document.getElementById("pform").submit();
						});

					},
					cancel : function(index) {
						layer.close(index);
						$('#add').addClass("hide"); //取消继续隐藏
					},
				});
				/* zTree.addNodes(treeNode, {id:(100 + newCount), pId:treeNode.id, name:"new node" + (newCount++)}); */
				return false;
			});
	};
	function showRemoveBtn(treeId, treeNode) {
		return !treeNode.isParent;
	}
	function removeHoverDom(treeId, treeNode) {
		$("#addBtn_" + treeNode.tId).unbind().remove();
	};

	$.fn.zTree.init($("#treeDemo"), setting, zNodes);

	function addqx(id) {
		$("#dept_id").val(id);
		document.getElementById("adx").reset();
		$('#addqx').removeClass("hidden");
		userMode = layer.open({
			type : 1,
			shade : [ 0.5 ],
			title : '权限添加', //不显示标题
			area : [ '20%', '500px' ], //显示空间
			content : $('#addqx'), //捕获的元素
			btn : [ '添加', '取消' ],
			yes : function(index, layero) { //或者使用btn1
				$.post("addqx", $("#adx").serialize(), function(data) {
					layer.close(index);
					$('#addqx').addClass("hidden");
					document.getElementById("adx").submit();
				});
			},
			cancel : function(index) {
				layer.close(index);
				$('#addqx').addClass("hidden"); //取消继续隐藏
			},
		});
	};
	function abclick(id) {
		window.location.href = "/mes/#dept/select?id=" + id;
	};
</script>