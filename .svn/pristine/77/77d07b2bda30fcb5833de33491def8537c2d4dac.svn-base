<!-- 获取权限 -->
<div class="hide" id="add">
	<form class="form-horizontal" role="form" id="updateRolePrivilegeForm">
		<div class="form-group hide">
			<label class="col-sm-3 control-label no-padding-right"
				for="form-field-1"> 角色编号:</label>
			<div class="col-sm-9">
				<input type="text" id="privilege_role_id" name="role.id"
					placeholder="请输入角色名" class="form-control" />
			</div>
		</div>
		<div class="checkbox" id="L01">
			<label> 获取权限失败; </label>
		</div>
	</form>
</div>
<div id="privilege-dialog" class="hide"></div>


<!-- /.添加权限 -->
<div class="hidden" id="addqx">
	<div class="col-xs-2"></div>
	<div class="col-xs-8">
		<form id="adx" action="#" method="post">

			<div class="col-xs-12">
				<div class="control-group">
					<label class="control-label bolder blue">权限选择</label>

					<!-- #section:custom/checkbox -->
					<#list privilege as p>
					<div class="checkbox">
						<label> <input name="form-field-checkbox" type="checkbox"
							class="ace ace-checkbox-3" value="${p.privilege_id!}"> <span
							class="lbl">${p.privilege_name!}</span> </label>
					</div>
					</#list>
				</div>
			</div>

		</form>
	</div>
	<div class="col-xs-2"></div>
</div>



<script type="text/javascript">
	function addqx() {
		document.getElementById("adx").reset();
		$('#addqx').removeClass("hidden");
		userModel = layer.open({
			type : 1,
			shade : [ 0.5 ],
			title : '权限添加', //不显示标题
			area : [ '20%', '500px' ], //显示空间
			content : $('#addqx'), //捕获的元素
			btn : [ '添加', '取消' ],
			yes : function(index, layero) { //或者使用btn1
				$.post("addqx", $("#adx").serialize(), function(data) {

					layer.close(index);
					$('#addqx').addClass("hidden");
					document.getElementById("adx").submit();

				});
			},
			cancel : function(index) {
				layer.close(index);
				$('#addqx').addClass("hidden"); //取消继续隐藏
			},
		});
	};

	function addForm() {
		document.getElementById("pform").reset();
		$('#add').removeClass("hide");
		userModel = layer.open({
			type : 1,
			shade : [ 0.5 ],
			title : '角色添加', //不显示标题
			area : [ '30%', '300px' ], //显示空间
			content : $('#add'), //捕获的元素
			btn : [ '添加', '取消' ],
			yes : function(index, layero) { //或者使用btn1
				$.post("add", $("#pform").serialize(), function(data) {

					layer.close(index);
					$('#add').addClass("hide");
					document.getElementById("pform").submit();

				});
			},
			cancel : function(index) {
				layer.close(index);
				$('#add').addClass("hide"); //取消继续隐藏
			},
		});
	};
	function alterForm() {
		document.getElementById("pform").reset();
		$('#add').removeClass("hide");
		userModel = layer.open({
			type : 1,
			shade : [ 0.5 ],
			title : '角色更改', //不显示标题
			area : [ '30%', '300px' ], //显示空间
			content : $('#add'), //捕获的元素
			btn : [ '更改', '取消' ],
			yes : function(index, layero) { //或者使用btn1
				$.post("add", $("#pform").serialize(), function(data) {

					layer.close(index);
					$('#add').addClass("hide");
					document.getElementById("pform").submit();

				});
			},
			cancel : function(index) {
				layer.close(index);
				$('#add').addClass("hide"); //取消继续隐藏
			},
		});
	};
</script>
