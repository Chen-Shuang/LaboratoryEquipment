<meta charset="utf-8" />
<div class="breadcrumbs" id="breadcrumbs">
	<ul class="breadcrumb">
		<li><i class="ace-icon fa fa-home home-icon"></i> <a href="index">系统管理</a>
		</li>

		<li><span>角色管理</span></li>
	</ul>
	<!-- /.breadcrumb -->
</div>
<div class="page-content">

	<div class="row">
		<div class="col-xs-12">
			<div class="row">
				<div class="col-xs-12">
					<div class="clearfix"></div>
					<div class="table-header">角色管理</div>

					<!-- div.table-responsive -->

					<!-- div.dataTables_borderWrap -->
					<div>
						<div id="dynamic-table_wrapper"
							class="dataTables_wrapper form-inline no-footer">
							<div class="row">
								<div class="col-xs-6">
									<div class="col-xs-3">
										<div id="dynamic-table_filter" class="dataTables_filter">
											<input type="search" class="form-control input-sm"
												placeholder="输入角色编号查询" aria-controls="dynamic-table">
										</div>
									</div>
									<div class="col-xs-4">
										 <select name="" aria-controls="dynamic-table"
											class="form-control "><option value="1">角色名称</option>
											<option value="0">admin</option>
											<option value="0">维修人员</option>
											<option value="0">质检人员</option>
										</select> <select name="" aria-controls="dynamic-table"
											class="form-control"><option value="1">角色状态</option>
											<option value="0">启用</option>
											<option value="0">停用</option>
										</select>
									</div>
									<div>
										<button type="button" class="btn btn-sm btn-primary">查询</button>
										<button type="button" class="btn btn-sm btn-primary">取消</button>

									</div>
								</div>
								<div class="col-xs-6"></div>
							</div>
							<table
								class="table table-striped table-bordered table-hover dataTable no-footer DTTT_selectable"
								id="dynamic-table" role="grid"
								aria-describedby="dynamic-table_info">
								<thead>
									<tr>
										<th class="col-xs-2">编号</th>
										<th class="hidden-480 col-xs-2">名称</th>
										<th class="col-xs-3">描述</th>
										<th class="hidden-480 col-xs-2">状态</th>

										<th colspan="2"><a
											class="btn btn-sm btn-primary col-xs-3"
											href="javascript:addForm()">添加角色</a>
										</th>
									</tr>
								</thead>

								<tbody>
									<#list list as role>
									<tr role="row" class="odd">
										<td>${role.role_id!}</td>
										<td>${role.role_name!}</td>
										<td>${role.role_des!}</td>
										<td><#if role.status == true><span
											class="label label-sm label-success ">启用</span></#if> <#if
											role.status == false><span
											class="label label-sm label-inverse arrowed-in">停用</span></#if></td>
										<td>
											<div class="hidden-sm hidden-xs action-buttons pull-left">
												<a href="javascript:alterForm()" class="green"> <i
													class="ace-icon fa fa-pencil bigger-130"></i> </a> <a
													href="delerolebyid/${role.role_id!}" class="_d red"> <i
													class="ace-icon fa fa-trash-o bigger-130"></i> </a>
											</div>
											<div class="btn-group">
												<a class="btn btn-sm btn-primary " href="javascript:addqx()">添加权限</a>
												<ul class="multiselect-container dropdown-menu">
													<li><a href="javascript:void(0);"><label
															class="checkbox"><input type="checkbox"
																class="ace" value="cheese"><span class="lbl"></span>
																Cheese</label> </a>
													</li>
													<li><a href="javascript:void(0);"><label
															class="checkbox"><input type="checkbox"
																class="ace" value="tomatoes"><span class="lbl"></span>
																Tomatoes</label> </a>
													</li>
													<li><a href="javascript:void(0);"><label
															class="checkbox"><input type="checkbox"
																class="ace" value="mozarella"><span class="lbl"></span>
																Mozzarella</label> </a>
													</li>
													<li><a href="javascript:void(0);"><label
															class="checkbox"><input type="checkbox"
																class="ace" value="mushrooms"><span class="lbl"></span>
																Mushrooms</label> </a>
													</li>
													<li><a href="javascript:void(0);"><label
															class="checkbox"><input type="checkbox"
																class="ace" value="pepperoni"><span class="lbl"></span>
																Pepperoni</label> </a>
													</li>
												</ul>
											</div></td>
									</tr>
									</#list>
								</tbody>
							</table>

							<div class="row">
								<div class="col-xs-6"></div>
								<div class="col-xs-6">

									<div class="dataTables_paginate paging_simple_numbers"
										id="dynamic-table_paginate">
										<div class="col-xs-4"></div>
										<div class="col-xs-3">
											<label>显示<select name="dynamic-table_length"
												aria-controls="dynamic-table" class="form-control input-sm"><option
														value="10">10</option>
													<option value="25">25</option>
													<option value="50">50</option>
													<option value="100">100</option>
											</select> 条记录</label>
										</div>
										<div class="col-xs-5">
											<ul class="pagination">
												<li class="paginate_button previous disabled"
													aria-controls="dynamic-table" tabindex="0"
													id="dynamic-table_previous"><a href="#">上一页</a>
												</li>
												<li class="paginate_button active"
													aria-controls="dynamic-table" tabindex="0"><a href="#">1</a>
												</li>
												<li class="paginate_button " aria-controls="dynamic-table"
													tabindex="0"><a href="#">2</a>
												</li>
												<li class="paginate_button " aria-controls="dynamic-table"
													tabindex="0"><a href="#">3</a>
												</li>
												<li class="paginate_button next"
													aria-controls="dynamic-table" tabindex="0"
													id="dynamic-table_next"><a href="#">下一页</a>
												</li>
											</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /.col -->
	</div>
</div>

