<script>
	function addForm() {
		document.getElementById("pform").reset();
		$('#add').removeClass("hide");
		userModel = layer.open({
			type : 1,
			shade : [ 0.5 ],
			title : '添加',
			area : [ '50%', '500px' ], //显示空间
			content : $('#add'), //捕获的元素
			btn : [ '添加', '取消' ],
			yes : function(index, layero) { //或者使用btn1
				$.post("add", $("#pform").serialize(), function(data) {

					layer.close(index);
					$('#add').addClass("hide");
					document.getElementById("pform").submit();
				});
			},
			cancel : function(index) {
				layer.close(index);
				$('#add').addClass("hide"); //取消继续隐藏
			},
		});
	};

	//编辑并传递参数
	$(".editButton")
			.on(
					'click',
					function(e) {
						e.preventDefault();
						$
								.get(
										$(this).attr("href"),
										function(data) {
											//字段一一对应，必须填写id
											$("#xh").val(data.xh);

											$("#sbbc").val(data.sbbc);
											$("#sbbh").val(data.sbbh);
											$("#cmcc").val(data.cmcc);
											$("#gzbh").val(data.gzbh);
											$("#dtcc").val(data.dtcc);
											$("#dtbh").val(data.dtbh);
											$("#dtsm").val(data.dtsm);
											$("#scsl").val(data.scsl);
											$("#czy").val(data.czy);
											$("#ipqc").val(data.ipqc);
											$("#scrq").val(data.scrq);

											var dialog = $("#update2")
													.removeClass('hide')
													.dialog(
															{//update 表示前边div的id
																modal : true,
																width : '500',
																title : "<div class='widget-header widget-header-small' style='background:#307ECC'><h4 class='smaller white'><i class='ace-icon fa fa-check'></i>修改生产计划信息</div>",
																title_html : true,
																buttons : [
																		{
																			text : "确认",
																			"class" : "btn btn-primary btn-minier",
																			click : function() {
																				document
																						.getElementById(
																								"updateForm")
																						.submit();//updateForm与前边表单的id一一对应
																				$(
																						this)
																						.remove();
																				return false;
																			}

																		},
																		{

																			text : "取消",
																			"class" : "btn btn-minier",
																			click : function() {
																				$(
																						this)
																						.dialog(
																								"close");
																			}
																		} ]

															/**
															dialog.data( "uiDialog" )._title = function(title) {
																title.html( this.options.title );
															};
															 **/
															});
										}, "json");
					});
</script>

